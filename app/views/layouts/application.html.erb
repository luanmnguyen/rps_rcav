<!DOCTYPE html>
<html>
<head>
  <title>RockPaperScissors</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <!-- Connect to Bootstrap CSS -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">

  <!-- Connect to Font Awesome CSS -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

  <!-- Connect to Bootstrap Javascript -->
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <style>
    body {
      padding-top: 50px;
    }
  </style>
</head>
<body>

<div class="container">

    <div class="row">
      <div class="row">

        <div class="col-md-8 col-md-offset-2">
          <div class="btn-group btn-group-justified">
            <a href="/rock" class="btn btn-block btn-primary">
              Play Rock
            </a>

            <a href="/paper" class="btn btn-block btn-primary">
              Play Paper
            </a>

            <a href="/scissors" class="btn btn-block btn-primary">
              Play Scissors
            </a>
          </div>
        </div>
      </div>
    </div>


    <div class="row">
    <p></p>

      <div class="col-md-4 col-md-offset-2">
        <div class="panel panel-success">
          <div class="panel-heading">
            <h2 class="panel-title text-center">
              <%=@your_move%>
            </h2>

          </div>

          <div class="panel-body">
            <img class="img-responsive" src="<%=@img%>">
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h2 class="panel-title text-center">
              <%=@computer_move%>
            </h2>

          </div>

          <div class="panel-body">
            <img class="img-responsive" src="<%=@img_comp%>">
          </div>
        </div>
      </div>


    </div>

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= yield %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="well text-center">
          <h1>
            <span class="label label-danger">
              <%=@result%>
            </span>
          </h1>

        </div>

      </div>

    </div>

  </div>


</body>
</html>
